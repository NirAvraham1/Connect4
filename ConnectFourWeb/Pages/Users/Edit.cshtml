@page "{id:int}"
@model ConnectFourWeb.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
    var identVal = Model.Identifier.GetValueOrDefault();
    var hasIdent = identVal > 0;
}
<h2 class="mb-3">Edit User</h2>

<form method="post" novalidate>
    <!-- Model-level errors -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <input type="hidden" asp-for="Input.Id" />

    <div class="mb-3">
        <label asp-for="Input.Username" class="form-label"></label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" class="form-control" type="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Country" class="form-label"></label>
        <input asp-for="Input.Country" class="form-control" />
        <span asp-validation-for="Input.Country" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Phone" class="form-label"></label>
        <input asp-for="Input.Phone" class="form-control" />
        <span asp-validation-for="Input.Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Identifier" class="form-label"></label>
        <input asp-for="Input.Identifier" class="form-control" />
        <span asp-validation-for="Input.Identifier" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    @if (hasIdent)
    {
        <a class="btn btn-secondary ms-2" asp-page="/Players" asp-route-Identifier="@identVal">Cancel</a>
    }
    else
    {
        <a class="btn btn-secondary ms-2" asp-page="/Players">Cancel</a>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
