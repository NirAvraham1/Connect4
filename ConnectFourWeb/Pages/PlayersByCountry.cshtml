@page
@model ConnectFourWeb.Pages.PlayersByCountryModel
@{
    ViewData["Title"] = "Players by Country";
}

<h2>Players Grouped by Country</h2>

@foreach (var grp in Model.Groups)
{
    <h3>@grp.Country (@grp.Players.Count players)</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Phone</th>
                <th>Identifier</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in grp.Players)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Username</td>
                    <td>@p.Phone</td>
                    <td>@p.Identifier</td>
                </tr>
            }
        </tbody>
    </table>
}
