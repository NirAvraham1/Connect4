@page
@model ConnectFourWeb.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="page-title mb-3">Login</h2>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card">
            <div class="card-body p-4">
                <form method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Identifier" class="form-label"></label>
                        <input asp-for="Input.Identifier" class="form-control" />
                        <span asp-validation-for="Input.Identifier" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" type="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Login</button>

                    <div class="mt-3 small">
                        No account? <a asp-page="/Auth/Register">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
