@page
@model ConnectFourWeb.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="mb-3">Create an account</h2>

<form method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="mb-3">
        <label asp-for="Input.Username" class="form-label"></label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" class="form-control" type="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Identifier" class="form-label"></label>
        <input asp-for="Input.Identifier" class="form-control" />
        <span asp-validation-for="Input.Identifier" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Phone" class="form-label"></label>
        <input asp-for="Input.Phone" class="form-control" />
        <span asp-validation-for="Input.Phone" class="text-danger"></span>
        <div class="form-text">Enter exactly 10 digits.</div>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Country" class="form-label"></label>
        <select asp-for="Input.Country" class="form-select" asp-items="Model.CountryOptions">
            <option value="">-- Choose a country --</option>
        </select>
        <span asp-validation-for="Input.Country" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
